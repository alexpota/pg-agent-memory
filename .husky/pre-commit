# Fast fail on type errors first
echo "🔍 Running TypeScript type check..."
npm run type-check

# Run lint-staged for efficient validation of changed files
echo "✨ Running lint-staged..."
npx lint-staged

# Run unit tests (always)
echo "🧪 Running unit tests..."
npm run test

# Run integration tests with Docker database
echo "🐳 Running integration tests with Docker database..."
npm run test:docker